{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxFactory": "React.createElement",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["packages/components/*"],
      "@utils/*": ["packages/utils/*"],
      "@hooks/*": ["packages/hooks/*"],
      "@api/*": ["packages/api/*"],
      "@assets/*": ["packages/assets/*"],
      "@constants/*": ["packages/constants/*"]
    }
  },
  "include": [
    "src",
    "packages"
  ],
  "exclude": [
    "node_modules"
  ]
}